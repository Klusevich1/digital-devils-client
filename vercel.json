{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "redirects": [
    {
      "source": "/blog/$",
      "destination": "/blog",
      "permanent": true
    },
    {
      "source": "/(.*)/$",
      "destination": "/$1",
      "permanent": true
    },
    {
      "source": "/(index|default|home|test)(\\.(php|html|xhtml|htm|xml))?",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/(.*)\\.(php|htm|html|xml|xhtml)",
      "destination": "/$1",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/(index|default|home|test)(\\.(php|html|xhtml|htm|xml))?",
      "destination": "/404.html"
    },
    {
      "source": "/(.*)",
      "destination": "/404.html"
    }
  ],
  "error": {
    "404": "/404.html",
    "500": "/500.html",
    "503": "/503.html"
  }
}
